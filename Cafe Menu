void Tuesday()
{
    int Daal_Chawal = 100;
    int Drink = 40;
    int Kheer = 80;
    int b;
    int d = 0;
    char c;
    string bill;
    float f;
    r:
    cout<<"Menu of Tuesday"<<endl;
    cout<<"Daal_Chawal: "<<Daal_Chawal<<" Rs"<<endl;
    cout<<"Drink: "<<Drink<<" Rs"<<endl;
    cout<<"Kheer: "<<Kheer<<" Rs"<<endl;
