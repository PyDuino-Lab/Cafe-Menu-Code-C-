        cout<<"Achar_Gosht = "<<Achar_Gosht<<" Rs subtracted from bill"<<endl;
        d=d-Achar_Gosht;
        cout<<"Do you want to add any other thing ? Press y or n"<<endl;
        cin>>c;
        if(c=='y')
        {
            goto t;
        }
        else if(c=='n')
        {
            cout<<"Type BILL if you want to see bill"<<endl;
            cin>>bill;
            if(bill=="BILL")
            {
                if(d<0)
                {
                    cout<<"Your current bill is: "<<0<<endl;
                }
                else
                {
                    cout<<"Your Items bill is: "<<d<<endl;
                    f = (d*4)/100;
                    cout<<"4 percent GST: "<<f<<endl;
                    cout<<"Total BILL including GST: "<<d+f;
                }
            }
            else
            {
                cout<<"Wrong command for BILL"<<endl;
            }
            
        }
        else
        {
            cout<<"Wrong input !"<<endl;
        }
    }
    else if(b==5)
    {
