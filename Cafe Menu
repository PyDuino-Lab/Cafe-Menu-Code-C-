void Friday()
{
    int Biryani = 140;
    int Chicken = 50;
    int Pasta = 90;
    int b;
    int d = 0;
    char c;
    string bill;
    float f;
    u:
    cout<<"Menu of Friday"<<endl;
    cout<<"Biryani: "<<Biryani<<" Rs"<<endl;
    cout<<"Chicken: "<<Chicken<<" Rs"<<endl;
    cout<<"Pasta: "<<Pasta<<" Rs"<<endl;
    cout<<"Press 1 to buy 1st thing"<<endl;
    cout<<"Press 2 to buy 2nd thing"<<endl;
    cout<<"Press 3 to buy 3rd thing"<<endl;
    cout<<"Press 4 to remove 1st thing"<<endl;
    cout<<"Press 5 to remove 2nd thing"<<endl;
    cout<<"Press 6 to remove 3rd thing"<<endl;
    cin>>b;
    cin>>b;
    if(b==1)
    {
        cout<<"Biryani = "<<Biryani<<" Rs added to bill"<<endl;
