void Thursday()
{
    int Achar_Gosht = 180;
    int Roti = 20;
    int Drink = 40;
    int b;
    int d = 0;
    char c;
    string bill;
    float f;
    t:
    cout<<"Menu of Thursday"<<endl;
    cout<<"Achar_Gosht: "<<Achar_Gosht<<" Rs"<<endl;
    cout<<"Roti: "<<Roti<<" Rs"<<endl;
    cout<<"Drink: "<<Drink<<" Rs"<<endl;
