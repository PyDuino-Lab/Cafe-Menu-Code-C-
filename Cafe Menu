int main()
{
    string a;
    Day_Select();
    cin>>a;
    if(a=="monday")
    {
        Monday();
    }
    else if(a=="tuesday")
    {
        Tuesday();
    }
    else if(a=="wednesday")
    {
        Wednesday();
    }
    else if(a=="thursday")
    {
        Thursday();
    }
    else if(a=="friday")
    {
        Friday();
    }
    else
    {
        cout<<"Incorrect spelling, please make sure all alphabets are small"<<endl;
    }
}
