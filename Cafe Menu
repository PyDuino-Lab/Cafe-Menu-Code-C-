#include<iostream>
using namespace std;
void Day_Select()
{
    cout<<"Please enter the day"<<endl;
}
void Monday()
{
    int Nihari = 150;
    int Roti = 20;
    int Pastries = 40;
    int b;
    int d = 0;
    char c;
    string bill;
    float f;
    q:
    cout<<"Menu of Monday"<<endl;
    cout<<"Nihari: "<<Nihari<<" Rs"<<endl;
    cout<<"Roti: "<<Roti<<" Rs"<<endl;
    cout<<"Pastries: "<<Pastries<<" Rs"<<endl;
    cout<<"Press 1 to buy 1st thing"<<endl;
    cout<<"Press 2 to buy 2nd thing"<<endl;
    cout<<"Press 3 to buy 3rd thing"<<endl;
    cout<<"Press 4 to remove 1st thing"<<endl;
    cout<<"Press 5 to remove 2nd thing"<<endl;
    cout<<"Press 6 to remove 3rd thing"<<endl;
    cin>>b;
    if(b==1)
    {
        cout<<"Nihari = "<<Nihari<<" Rs added to bill"<<endl;
        d=d+Nihari;
        cout<<"Do you want to add or subtract any other thing ? Press y or n"<<endl;
        cin>>c;
        if(c=='y')
        {
            goto q;
        }
        else if(c=='n')
        {
            cout<<"Type BILL if you want to see bill"<<endl;
            cin>>bill;
            if(bill=="BILL")
            {
                if(d<0)
                {
                    cout<<"Your current bill is: "<<0<<endl;
                }
                else
                {
                    cout<<"Your Items bill is: "<<d<<endl;
                    f = (d*4)/100;
                    cout<<"4 percent GST: "<<f<<endl;
                    cout<<"Total BILL including GST: "<<d+f;
                }
            }
            else
            {
                cout<<"Wrong command for BILL"<<endl;
            }
            
        }
        else
        {
            cout<<"Wrong input !"<<endl;
        }
    }
    else if(b==2)
    {
        cout<<"Roti = "<<Roti<<" Rs added to bill"<<endl;
        d=d+Roti;
        cout<<"Do you want to add or subtract any other thing ? Press y or n"<<endl;
        cin>>c;
        if(c=='y')
        {
            goto q;
